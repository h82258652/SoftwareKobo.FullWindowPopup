<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SoftwareKobo">

    <Style TargetType="local:FullWindowPopup">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="local:FullWindowPopup">
                    <Border x:Name="Border"
                        Background="{TemplateBinding Background}">
                        <ContentPresenter x:Name="ContentPresenter" Content="{TemplateBinding Child}" />
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>