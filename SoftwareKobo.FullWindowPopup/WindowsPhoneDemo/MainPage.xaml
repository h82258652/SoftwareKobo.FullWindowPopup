<Page
    x:Class="WindowsPhoneDemo.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WindowsPhoneDemo"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <StackPanel>
            <Button Content="显示全屏 Popup" Click="Button1_Click" />
            <Button Content="显示全屏 Popup 后退键关闭" Click="Button2_Click" />
            <Button Content="模拟 Toast" Click="Button3_Click"/>
        </StackPanel>
        <StackPanel VerticalAlignment="Bottom">
            <TextBlock x:Name="txtMsg" FontSize="20"></TextBlock>
        </StackPanel>
    </Grid>
</Page>